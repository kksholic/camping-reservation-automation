# Build stage
FROM node:18-alpine as build

WORKDIR /app

# 의존성 설치
COPY frontend/package*.json ./
RUN npm install

# 애플리케이션 코드 복사 및 빌드
COPY frontend/ .
RUN npm run build

# Production stage
FROM nginx:alpine

# Nginx 설정
COPY docker/nginx.conf /etc/nginx/conf.d/default.conf

# 빌드된 파일 복사
COPY --from=build /app/dist /usr/share/nginx/html

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
